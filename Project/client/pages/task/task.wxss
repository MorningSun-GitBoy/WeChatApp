.top{
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.top-box{
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  background: #FFF;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.top-button{
  width: 100%;
  line-height: 52px;
  font-size: 40rpx;
  color: #605456;
}
.top-button:first-child{
  border-top: none;
}
